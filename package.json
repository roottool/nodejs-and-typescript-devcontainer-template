{
  "name": "nodejs-and-typescript-devcontainer-template",
  "version": "1.0.0",
  "description": "This is a template for a devcontainer of Node.js and TypeScript.",
  "license": "MIT",
  "private": true,
  "author": {
    "name": "roottool",
    "url": "https://github.com/roottool"
  },
  "repository": "https://github.com/roottool/nodejs-and-typescript-devcontainer-template.git",
  "bugs": {
    "url": "https://github.com/roottool/r6s-sensivity-calculator-for-web/issues"
  },
  "scripts": {
    "preinstall": "npx only-allow yarn",
    "prepare": "is-ci || husky install",
    "lint": "run-p -c lint:*",
    "lint:check-types": "tsc --noEmit",
    "lint:eslint": "eslint . --color --ext .js,.jsx,.ts,.tsx",
    "lint:prettier": "prettier --check .",
    "fix": "run-p -c fix:*",
    "fix:eslint": "eslint . --fix --color --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "test": "run-p test:*",
    "test:jest": "echo \"Write tests!\"",
    "test:check-types": "echo \"tsc --noEmit\""
  },
  "importSort": {
    ".js, .jsx, .ts, .tsx": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "*.{js|jsx|ts|tsx}": [
      "yarn fix",
      "yarn format"
    ],
    "*.{json|md}": [
      "yarn format"
    ],
    ".{eslint|prettier}rc": [
      "yarn format"
    ]
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-sort-destructure-keys": "^1.3.5",
    "eslint-plugin-sort-keys-fix": "^1.1.1",
    "eslint-plugin-typescript-sort-keys": "^1.7.0",
    "husky": "^7.0.1",
    "import-sort-style-module": "^6.0.0",
    "is-ci": "^3.0.0",
    "lint-staged": "^11.1.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  }
}
